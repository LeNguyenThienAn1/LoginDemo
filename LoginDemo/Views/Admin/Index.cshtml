@model IEnumerable<LoginDemo.Models.Users>
@{
    ViewData["Title"] = "Admin Dashboard";
    var userRoles = ViewData["UserRoles"] as Dictionary<string, IList<string>>;
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Admin Dashboard</h2>
    <div class="card shadow-lg p-4">
        <h3 class="card-title">User Management</h3>
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>Full Name</th>
                    <th>Email</th>
                    <th>Roles</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.FullName</td>
                        <td>@user.Email</td>
                        <td>@string.Join(", ", userRoles[user.Id])</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-sm btn-primary">Details</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

